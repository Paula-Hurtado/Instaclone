<div class="jumbotron">
  <h1 class="display-4 font">Create a new post!</h1>
</div>

<%= form_with model: @post do |f| %>
    <div class="form-group row">
        <div class="col-2"></div>
        <label class="col-2" for="post[pic]">image: </label><%= f.file_field :pic, required: true, class:"form-control" %></div>
    <div>caption: <%= f.text_area :caption, required: true %></div>
    <%= f.submit %>
<% end %>